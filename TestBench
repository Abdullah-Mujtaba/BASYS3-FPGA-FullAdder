
module testbench;
reg[3:0] A,B;
reg CIN;
wire [3:0] SUM;
wire COUT;
FullAdd4 FA_4(SUM,COUT,A,B,CIN);
initial
begin
$monitor($time, "A = %b, B = %b, CIN = %b, COUT = %b, SUM = %b/n", A, B, CIN, COUT, SUM);
end 
initial 
begin
A = 4'd0; B = 4'd0; CIN = 1'b0;
#5 A =4'd3; B = 4'd4;
#5 A =4'd2; B = 4'd5;
#5 A =4'd9; B = 4'd9;
#5 A =4'd10; B = 4'd15;
#5 A =4'd10; B = 4'd5; CIN = 1'b1;
end
endmodule
